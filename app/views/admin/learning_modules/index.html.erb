<div class="as--admin-index-title">
  <h1>All Learning Modules</h1>
  <%= link_to 'New Learning Module', new_admin_learning_module_path, class: 'button button--tertiary as--no-margin-bottom' %>
</div>

<table>
  <thead>
    <tr>
    	<th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @learning_modules.each do |learning_module| %>
      <tr>
        <td><%= learning_module.title %></td>
        <td class="table--button"><%= link_to 'Edit', edit_admin_learning_module_path(learning_module), class: 'button button--primary button--edit as--no-margin-bottom' %></td>
      </tr>
    <% end %>
  </tbody>
</table>