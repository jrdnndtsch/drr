<div class="page devise">
	<div class="wrapper">
		<h2 class=" center-text">Join Dr. Roebuck's Family</h2>

		<div class="form-wrapper">
			<p>Forget your password?</p>
			<p>Enter your email address to reset your password</p>
			<p>You may need to check your spam folder</p>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>
		
			<div class="forget-fields wrapper--flex">
			  <div class="field col--two-margin">
			    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
			  </div>

			  <div class="action field col--two-margin">
			    <%= f.submit "Submit", class: 'button button--primary' %>
			  </div>
			</div>
		</div>
			
		<% end %>
	</div>
	
</div>
