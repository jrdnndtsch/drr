<div class="page devise">
	<div class="wrapper center-text">
		<h2>Join Dr. Roebuck's Family</h2>

		<p>Forget your password?</p>
		<p>Enter your email address to reset your password</p>
		<p>You may need to check your spam folder</p>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>
		
		<div class="wrapper--flex">
		  <div class="field password col--two">
		    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
		  </div>

		  <div class="actions col--two">
		    <%= f.submit "Submit", class: 'button button--primary' %>
		  </div>
			
		</div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	
</div>
