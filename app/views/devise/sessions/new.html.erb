
<div class="page devise">
	
	<div class="wrapper center-text">
		<h2>Learn about beauty inside and out</h2>
		<div class="form-wrapper">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="field">
			    <%= f.email_field :email, autofocus: true, placeholder: 'Username' %>
			  </div>

			  <div class="field">

			    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
			  </div>

			  

			  <div class="actions">
			    <%= f.submit "Submit", class: 'button button--primary' %>
			  </div>
			<% end %>
			<p><%= link_to "Forgot password?", new_password_path(resource_name) %></p> 
			<p><%= link_to "New to Dr. Roebuck's, join our family now!", new_registration_path(resource_name) %></p> 
		</div>
		
	</div>

</div>
