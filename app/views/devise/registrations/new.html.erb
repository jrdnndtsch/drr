<div class="page devise">
  <div class="wrapper center-text">
    
    <h2>Join the Dr. Roebuck's Family</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="forget-fields">
        <div class="field">
          <%= text_field_tag 'first_name', nil, placeholder: 'First'%>
        </div>
        <div class="field">
          <%= text_field_tag 'last_name', nil, placeholder: 'Last'%>
        </div>
      </div>
      <div class="forget-fields">
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
        </div>
        <div class="field">
          <%= email_field_tag 'email_confirm', nil, placeholder: 'Repeat Email Address' %>
        </div>
      </div>
      <div class="forget-fields">
       <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
       </div>
      

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Repeat Password' %>
      </div>
      </div>
      

      
    

      <div class="actions">
        <%= f.submit "Next", class: 'button button--primary' %>
      </div>
    <% end %>
  </div>
</div>


