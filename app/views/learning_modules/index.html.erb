<div class="page">
	<div class="wrapper learning-modules">
		<h1 class="center-text">Discover our 4 compulsory modules today!</h1>
		<div class="wrapper--flex learning-modules-wrapper">
			<% @learning_modules.each do |learning_module| %>
				<div class="col--two learning-circle-wrapper center-text">
					<%= link_to learning_module_path(learning_module) do%>
						<div class="learning-circle" style="background-image: url(  <%= learning_module.image.url %>)"></div>
					<% end %>  
				</div>
				<div class="col--two center-text">
					<div class="learning-area">
					  <h2><%= learning_module.title %></h2>
					  <p class="small">To complete your Dr Roebuckâ€™s training, please visit each module today!</p>
					  <%= link_to learning_module.cta, learning_module_path(learning_module), class: 'button button--primary-small'%>
					</div>
				</div>
			<% end %>		
		</div>
		
	</div>
</div>


