<div class="page">
	<div class="wrapper learning-modules">
		<h1 class="center-text">Discover Beauty Inside and Out with Dr. Roebuck's</h1>
		<div class="wrapper--flex">
			<% @learning_modules.each do |learning_module| %>
				<div class="col--two center-text">
					<%= link_to learning_module_path(learning_module) do%>
						<div id="learning-circle"class="circle"style="background-image: url(  <%= learning_module.image.url %>)"></div>
					<% end %>  
				</div>
				<div class="col--two center-text">
					<div class="learning-area">
					  <h2><%= learning_module.title %></h2>
					  <%= link_to 'Learn More', learning_module_path(learning_module), class: 'button button--primary'%>
					</div>
				</div>
			<% end %>		
		</div>
		
	</div>
</div>


