<!DOCTYPE html>
<html>
<head>
  <title>Drroebucks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://mozilla.github.io/pdf.js/build/pdf.js"></script>
  <script src="https://mozilla.github.io/pdf.js/build/pdf.worker.js"></script>
</head>
<body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="main" style="background-image: url(<%=image_url('drr-background2.jpg')%>);">
  <p class="navbar-text pull-right logged-in">
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %>
    <% else %>    
    <% end %>
  </p>
  <div class="nav">
    <ul>
      <li><%= link_to 'Courses', root_path %></li>
      <li><%= link_to 'Libraries', libraries_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
    </ul>
  </div>

  <%= yield %>  
</div>




</body>
</html>
